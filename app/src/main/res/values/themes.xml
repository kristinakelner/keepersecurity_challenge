<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.KeeperSecurityCodingTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/DefaultText</item>

    </style>

    <style name="DefaultText" parent="TextAppearance.AppCompat">
        <item name="android:font">@font/overpass_regular</item>
        <item name="android:fontFamily">@font/overpass_regular</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText" parent="DefaultText">
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <style name="CopyrightText" parent="DefaultText">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="LinkText" parent="DefaultText">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="LoginField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:font">@font/overpass_regular</item>
        <item name="android:fontFamily">@font/overpass_regular</item>
        <item name="android:background">@drawable/transparent_bg_button</item>
        <item name="backgroundTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="MainButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:font">@font/overpass_regular</item>
        <item name="android:fontFamily">@font/overpass_regular</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>